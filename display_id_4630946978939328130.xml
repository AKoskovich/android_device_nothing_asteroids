    <highBrightnessMode enabled="true">
        <!-- Brightness level at which we transition from normal to high-brightness. -->
        <transitionPoint>0.84074</transitionPoint>
        <!-- Minimum lux needed to enter high brightness mode. -->
        <minimumLux>7000</minimumLux>
        <timing>
            <!-- Window in which we restrict HBM. -->
            <timeWindowSecs>1800</timeWindowSecs>
            <!-- Maximum time of HBM allowed in that window. -->
            <timeMaxSecs>300</timeMaxSecs>
            <!-- Minimum time remaining required to switch HBM on for. -->
            <timeMinSecs>60</timeMinSecs>
        </timing>
        <!-- Whether HBM is allowed when lower power mode is active. -->
        <allowInLowPowerMode>false</allowInLowPowerMode>
        <!-- Minimum HDR video size to enter high brightness mode. -->
